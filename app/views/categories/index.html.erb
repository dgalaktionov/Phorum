<h2>Forum index</h2>

<table>
  <thead>
    <tr>
	<th>Name</th>
	<th>Topics</th>
	<th>Posts</th>
	<th>Last Topic</th>
	<th>Updated</th>
	<% if has_admin_power? %>
      <th colspan="2"></th>
	<% end %>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= link_to category.name, category %></td>
		<td><%= category.topics.count %></td>
		<td><%= count_posts(category) %></td>
		<% last_topic = get_last_edited_category_topic(category) %>
		<% if last_topic == nil %>
			<td>None</td>
			<td>None</td>
		<% else %>
			<td><%= link_to last_topic, [category, last_topic] %></td>
			<td><%= link_to last_topic.updated_time, get_last_edited_post_path(last_topic) %></td>
		<% end %>
		<% if has_admin_power? %>
			<td><%= link_to 'Edit', edit_category_path(category) %></td>
			<td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		<% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<% if has_admin_power? %>
<br>

<%= link_to 'New Category', new_category_path %>
<% end %>
