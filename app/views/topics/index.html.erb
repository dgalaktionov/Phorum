<h2><a href="#"><%= "Topics from #{@user}" %></a></h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <% if user_signed_in? %>
      <th colspan="2"></th>
	  <% end %>
    </tr>
  </thead>

  <tbody>
    <% @topics.each do |topic| %>
      <tr>
        <td><%= link_to topic.name, [topic.category, topic] %></td>
        <td><%= topic.user %></td>
		<% if has_power_over?(topic) %>
        <td><%= link_to 'Edit', edit_category_topic_path(:category_id => topic.category.id, :id => topic.id) %></td>
        <td><%= link_to 'Destroy', [topic.category, topic], method: :delete, data: { confirm: 'Are you sure?' } %></td>
		<% end %>
      </tr>
    <% end %>
  </tbody>
</table>
